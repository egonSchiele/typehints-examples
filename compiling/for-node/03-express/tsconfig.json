{
  "compilerOptions": {
    "target": "es2016",
    // Generate ecmascript modules
    "module": "NodeNext",

    // Without this, TypeScript will not look for modules in node_modules
    "moduleResolution": "nodenext",

    // Folder where the compiled JavaScript will go
    "outDir": "./dist",

    // This will print out all the places TypeScript is looking for an imported module
    "traceResolution": true
  }
}
